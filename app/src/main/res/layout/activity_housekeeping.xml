<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.oryossipof.alphahotal.Housekeeping">

<TextView
    android:id="@+id/securityTextView"
    android:layout_width="368dp"
    android:layout_height="55dp"
    android:text="Housekeeping"
    android:textSize="36sp"
    android:textStyle="bold"
    android:textAlignment="center"/>;

<it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
    android:id="@+id/coverFlow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:coverHeight="200dp"
    app:coverWidth="140dp"
    app:maxScaleFactor="1.5"
    app:reflectionGap="0px"
    app:scalingThreshold="0.5"
    app:rotationThreshold="0.5"
    app:spacing="0.4"
    />

<TextSwitcher
    android:id="@+id/title"
    android:paddingBottom="16dp"
    android:layout_alignParentBottom="true"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</TextSwitcher>



</RelativeLayout>
