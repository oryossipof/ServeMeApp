<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2"
    tools:context="com.example.oryossipof.alphahotal.questionnairesActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:gravity="left"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:textSize="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Questionanaires" />

    </LinearLayout>

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/textView5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="what is your origin?"
        />

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        >

        <EditText
            android:id="@+id/originText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="your origin"


            />


    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is your age?"
        />



    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:weightSum="9">

        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

           >
        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/under15bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="under 15" />


        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/over15bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="over 15" />


        </RadioGroup>

    </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your gender?"

            />

    <LinearLayout
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <RadioGroup
            android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/malebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male" />

        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/femalebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female" />
        </RadioGroup>

    </LinearLayout>

        <TextView

            android:id="@+id/textView3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you a vegeterian?"
            />


    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<RadioGroup
    android:id="@+id/group3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/vegNobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no" />

        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/vegYesbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yes" />

</RadioGroup>
    </LinearLayout>


        <TextView

            android:id="@+id/textView4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="are you vegan?"
             />


    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<RadioGroup
    android:id="@+id/group4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/veganNobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no" />


        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/veganYesbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yes" />


</RadioGroup>
    </LinearLayout>




        <TextView

            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="are you married?"
             />

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<RadioGroup
    android:id="@+id/group5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/marriedNobt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no" />

        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/marriedYesbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yes" />

</RadioGroup>
    </LinearLayout>

        <TextView

            android:id="@+id/textView7"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="do you have children?"
             />


    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        >

<RadioGroup
    android:id="@+id/group6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/childrenNobt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no" />

        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/childrenYesbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yes" />


</RadioGroup>
    </LinearLayout>

        <TextView

            android:id="@+id/textView8"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your trip is for?"
          />

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        >
<RadioGroup
    android:id="@+id/group7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/pleasurebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pleasure" />

        <RadioButton
            android:button="@null"
            android:drawableLeft="@android:drawable/btn_radio"
            android:id="@+id/bussinessbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="business" />

</RadioGroup>


    </LinearLayout>

        <TextView

            android:id="@+id/textView9"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="part of a group?"
            />

        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

<RadioGroup
    android:id="@+id/group8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

            <RadioButton
                android:button="@null"
                android:drawableLeft="@android:drawable/btn_radio"
                android:id="@+id/groupNobt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no" />

            <RadioButton
                android:button="@null"
                android:drawableLeft="@android:drawable/btn_radio"
                android:id="@+id/groupYesbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes" />


</RadioGroup>


</LinearLayout>





    <LinearLayout
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/validationerr"
            android:visibility = "invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you must fill all fields!"
            android:textColor="#ff0000"
            android:gravity="center"

            />
        <Button
            android:gravity="center"
            android:id="@+id/sendbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>

